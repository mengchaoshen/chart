<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="loginChoice">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@drawable/login_choice_selector</item>
        <item name="android:button">@null</item>
    </style>
    
    <style name="button">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/submit_button_style</item>
    </style>
    
    <style name="backButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/back_button</item>
    </style>
    
    <style name="dateButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/date_button</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="choiceButton">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/choice_button</item>
    </style>
    
   <style name="MyDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 是否允许背景变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
   </style>
   
   <style name="progressBarDialog" parent="@android:style/Theme.Dialog">
       <item name="android:windowFrame">@null</item>
       <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <!-- 是否允许背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>
   </style>
   
   <style name="checkBox" >
       <item name="android:background">@drawable/date_button</item>
   </style>
   
   <style name="reasonCheckBox">
       <item name="android:button">@null</item>
   </style>
   
   <style name="listView">
       <item name="android:background">@drawable/list_view</item>
   </style>
   
   <style name="getCodeButton">
       <item name="android:background">@drawable/get_code_button</item>
   </style>

</resources>
