<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <item android:state_checked="true" >
        <shape >
            <solid android:color="#5DBAE5"/>
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="#4090C3" />
        </shape>
    </item>
    
    <item android:state_pressed="true"  >
        <shape >
            <solid android:color="#5DBAE5"/>
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="#4090C3" />
        </shape>
    </item>
    
    <item >
        <shape >
            <solid android:color="#D8ECF7"/>
            <corners android:radius="10dp"/>
            <stroke android:width="1dp" android:color="#B9CCDA" />
        </shape>
        
    </item>

</selector>
